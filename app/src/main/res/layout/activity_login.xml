<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:gravity="center"
        android:orientation="vertical">
        
        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@mipmap/ic_launcher"/>
        
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="22dp"
            android:text="@string/login_title"
            android:textColor="@color/login_title"
            android:textSize="22sp"/>
        
    </LinearLayout>

    <LinearLayout
        android:id="@+id/user_name_ll"
        android:layout_width="267dp"
        android:layout_height="48dp"
        android:layout_gravity="center"
        android:layout_marginTop="80dp"
        android:background="@drawable/login_userinput_type"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:text="@string/username"
            android:textColor="@color/login_userName"
            android:textSize="@dimen/users_text_size" />
        
        <View
            android:layout_width="1dp"
            android:layout_height="24dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="#eee" />

        <EditText
            android:id="@+id/user_name_et"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:singleLine="true"
            android:text="admin"
            android:textColor="@color/login_userName"
            android:textSize="@dimen/users_text_size"/>

    </LinearLayout>

    <LinearLayout
        android:id="@id/pass_word_ll"
        android:layout_width="267dp"
        android:layout_height="48dp"
        android:layout_gravity="center"
        android:layout_marginTop="14dp"
        android:background="@drawable/login_userinput_type"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:text="@string/password"
            android:textColor="@color/login_userNmae"
            android:textSize="@dimen/users_text_size"/>
        
        <View
            android:layout_width="1dp"
            android:layout_height="24dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="#eee"
            android:singleLine="true"/>

        <EditText
            android:id="@+id/pass_word"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:inputType="textPassword"
            android:singleLine="true"
            android:text="admin"
            android:textColor="@color/login_userNmae"
            android:textSize="@dimen/users_text_size"/>
    </LinearLayout>

    <Button
        android:id="@+id/login"
        android:layout_width="267dp"
        android:layout_height="48dp"
        android:layout_gravity="center"
        android:layout_marginTop="14dp"
        android:background="@drawable/ic_login_button_bg"
        android:gravity="center"
        android:text="@string/login_button"
        android:textColor="@color/btn_login"
        android:textSize="@dimen/btn_login" />


</LinearLayout>